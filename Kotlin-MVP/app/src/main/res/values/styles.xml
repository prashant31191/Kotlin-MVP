    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="HeaderItemTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">23sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:shadowColor">#81000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="HeaderItemLineStyle">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:visibility">gone</item>
    </style>


    <style name="AppTheme2" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">#333333</item>
    </style>

    <style name="AppTheme.Login" parent="AppTheme2">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingLeft">@dimen/m_5dp</item>
        <item name="android:paddingRight">@dimen/m_5dp</item>
        <item name="android:singleLine">true</item>

        <item name="android:textCursorDrawable">@drawable/text_cursor_cyan</item>
        <item name="android:digits">aãâáàbcçdeéfghiíjklmnoõôóòpqrstuvwxyzAÃÂÁÀBCÇDEÉFGHIÍJKLMNOÕÔÓÒPQRSTUVWXYZ@. -_\n: /?\\</item>
        <item name="android:textSize">@dimen/text_16s</item>
        <item name="android:fontFamily">@font/dosis_semibold</item>


    </style>


    <style name="App_ButtonStyle" parent="Widget.AppCompat.Button.Colored">

        <item name="android:background">@drawable/btn_gradient</item>
        <item name="android:elevation">@dimen/m_8dp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/btn_txt_white_color</item>
        <item name="android:textSize">@dimen/text_14s</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="MyEditTextTheme">
        <item name="colorControlNormal">#9e9e9e</item>
    </style>



    <style name="MyButtonTheme">

        <item name="colorButtonNormal">@android:color/white</item>

    </style>

</resources>
